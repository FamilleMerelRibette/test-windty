<div class="grid grid-cols-1 md:grid-cols-2 gap-8 items-start">
    <div class="aspect-square">
        {% if data.image %}
            <img src="{{ data.image }}" alt="{{ data.title }}" class="w-full h-full object-cover rounded-lg shadow-lg">
        {% endif %}
    </div>
    <div class="prose max-w-none">
        {{ content | safe }}
    </div>
</div>
