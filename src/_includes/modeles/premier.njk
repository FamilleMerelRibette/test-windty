 <div class="flex flex-col md:flex-row items-center gap-8 max-w-4xl mx-auto p-4">

   <!-- Bloc de texte -->
   <div class="w-full md:flex-1">
     <h2 class="text-xl md:text-2xl font-bold mb-4">Un exemple de mise en page</h2>
     <p class="text-gray-700 leading-relaxed">
     {{ content }}
     </p>
   </div>

   <!-- Image -->
   {%- if content.data.affiche -%}
   <div class="w-full md:w-1/3">
     <img
       src="{{ content.data.affiche }}"
       alt="Affiche"
       class="rounded-lg shadow-lg w-full"
     >
   </div>
   {%- endif -%}

 </div>
