<section id="composition" class="min-h-screen pt-48">
    <div class="container mx-auto px-6">
        <h2 class="text-5xl font-bold mb-8">Composition</h2>
        <p class="text-xl text-gray-600 mb-12">
            Découvrez l'art de la composition musicale à travers nos créations originales.
        </p>
    </div>

    {%- for composition in collections.compositions -%}
    <div class="container mx-auto px-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 items-start">
            <div class="aspect-square">
                {% if composition.data.image %}
                    <img src="{{ composition.data.image }}" alt="{{ composition.data.title }}" class="w-full h-full object-cover rounded-lg shadow-lg">
                {% endif %}
            </div>
            <div class="prose max-w-none">
                {{ composition.content | safe }}
            </div>
        </div>
    </div>
    {%- endfor -%}

</section>
